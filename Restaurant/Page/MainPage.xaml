<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Restaurant.MainPage"
             x:DataType="viewmodels:MainPageViewModel"
             xmlns:viewmodels="clr-namespace:Restaurant.ViewModels"
             xmlns:skia = "clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
             xmlns:AlohaKit.Animations="clr-namespace:AlohaKit.Animations;assembly=AlohaKit.Animations"
             Shell.NavBarIsVisible="False"
             >
    <StackLayout>
        <Label Text="{Binding User.Name}"></Label>
        <Label Text="{Binding User.Phone}"></Label>
        <Label Text="{Binding User.Password}"></Label>


        <Button WidthRequest="100"
                HeightRequest="50"
                Command="{Binding showUserCommand}"></Button>
    </StackLayout>
</ContentPage>

